
public class RandomTactics implements Tactics {

	public int readTactics() {

		int hand = 0;
		double random = Math.random() * 3;
		System.out.println(random);

		if(random < 1) {
			hand = Player.STONE;
		}else if(hand < 2) {
			hand = Player.SCISSOR;
		}else if (hand < 3) {
			hand = Player.PAPPER;
		}

		return hand;
	}
}
